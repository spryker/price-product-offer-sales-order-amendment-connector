{% extends template('widget') %}

{% define data = {
    servicePointName: _widget.servicePointName,
    scheduledAt: _widget.scheduledAt
} %}

{% block body %}
    {% if data.servicePointName %}
      <div><strong>{{ 'ssp_service_management.cart_item.service_point.name' | trans }}</strong>: {{ data.servicePointName }}</div>
    {% endif %}
    
    {% if data.scheduledAt %}
        <div class="service-point-scheduled-time">
            <strong>{{ 'ssp_service_management.cart_item.scheduled_at' | trans }}</strong>: {{ data.scheduledAt | formatDateTime }}
        </div>
    {% endif %}
{% endblock %}
