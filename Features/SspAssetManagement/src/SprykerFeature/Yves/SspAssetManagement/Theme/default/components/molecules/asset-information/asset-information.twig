{% extends model('component') %}

{% define config = {
    name: 'asset-information',
} %}

{% define data = {
    image: '',
    name: '',
    information: required,
    reference: '',
    note: '',
    assignments: [],
} %}

{% block body %}
    <div class="grid grid--with-gutter">
        <div class="col col--with-gutter col--sm-12 col--lg-6">
            {% block image %}
                <div class="grid grid--center">
                    <div class="col col--sm-12 col--md-10">
                        {% include molecule('lazy-image') with {
                            class: "spacing-bottom--big #{config.name}__image",
                            data: {
                                imagePlaceholder: publicPath('images/image-placeholder.png'),
                                imageSrc: data.image,
                                imageTitle: data.name,
                                isBackground: true,
                                extraAttributes: {
                                    'data-qa': 'ssp-asset-image',
                                    'image-src': data.image,
                                }
                            },
                        } only %}
                    </div>
                </div>
            {% endblock %}
        </div>

        <div class="col col--with-gutter col--sm-12 col--lg-6">
            {% block information %}
                <div class="grid grid--stretch {{ config.name }}__info">
                    {% for info in data.information %}
                        <div class="col col--sm-12 col--md-5 {{ config.name }}__info-col">
                            <strong>{{ info.title | trans }}</strong>
                        </div>
                        <div class="col col--sm-12 col--md-7 {{ config.name }}__info-col">{{ info.value | default('---') | raw }}</div>
                    {% endfor %}
                </div>
            {% endblock %}
        </div>

        <div class="col col--with-gutter col--sm-12 col--lg-6">
            {% block note %}
                {% if data.note %}
                    <div class="spacing-bottom"><strong>{{ 'ssp_asset.details_page.note' | trans }}</div></strong>
                    <p>{{ data.note }}</p>
                {% endif %}
            {% endblock %}
        </div>

        {% block assignments %}
            {% if data.assignments %}
                <div class="col col--with-gutter col--sm-12 col--lg-6">
                    <div class="spacing-bottom spacing-x"><strong>{{ 'ssp_asset.information.assigned_bu' | trans }}</div></strong>

                    <div class="grid grid--stretch {{ config.name }}__info">
                        {% for info in data.assignments %}
                            <div class="col col--sm-12 col--md-5 {{ config.name }}__info-col" data-qa="ssp-asset-assignments">
                                <strong>{{ info.companyBusinessUnit.name }}</strong>
                            </div>
                            <div class="col col--sm-12 col--md-7 {{ config.name }}__info-col">{{ info.assignedAt | formatDateTime }}</div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        {% endblock %}

        <div class="col col--with-gutter col--sm-12">
            {% block actions %}
                <div class="grid grid--right">
                    {% if can('CreateSspInquiryPermissionPlugin') and data.reference %}
                        <div class="col spacing-right">
                            <a href="{{ url('customer/ssp-inquiry/create', { sspAssetReference: data.reference, backUrlType: 'ssp-asset', backUrlIdentifier: data.reference }) }}" class="button button--hollow">{{ 'customer.ssp_inquiry.create.button' | trans }}</a>
                        </div>
                    {% endif %}

                    <div class="col">
                        <a href="#" class="button button--hollow" {{ qa('ssp-asset-services') }}>{{ 'ssp_asset.details_page.search_service' | trans }}</a>
                    </div>
                </div>
            {% endblock %}
        </div>
    </div>
{% endblock %}
