{% extends template('widget') %}

{% define data = {
    asset: _widget.asset
} %}

{% block body %}
    {% if data.asset %}
        <div class="spacing-y spacing-y--small">
            {% block title %}
                <div><strong>{{ 'ssp_asset_management.assigned_asset' | trans }}:</strong></div>
            {% endblock %}

            {% block asset %}
                <ul class="list">
                    <li class="list__item">
                        {{ 'ssp_asset_management.asset.name' | trans }}: <a href="{{ path('customer/asset/details', {'reference': data.asset.reference }) }}">{{ data.asset.name }}</a>
                    </li>

                    {% if data.asset.serialNumber %}
                        <li class="list__item">
                            {{ 'ssp_asset_management.asset.serial_number' | trans }}: {{ data.asset.serialNumber }}
                        </li>
                    {% endif %}
                </ul>
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}
