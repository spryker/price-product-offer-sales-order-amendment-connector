{% extends template('page-layout-customer', 'CustomerPage') %}

{% define data = {
    sspAsset: _view.sspAsset,
    title: 'customer.account.ssp_asset' | trans,
    unassignBusinessUnitForm: _view.unassignBusinessUnitForm,
    canBusinessUnitBeUnassigned: _view.canBusinessUnitBeUnassigned,
    activePage: 'asset',
} %}

{% block breadcrumbs %}
    {% include molecule('breadcrumb') with {
        data: {
            steps: [
                {
                    label: 'customer.account' | trans,
                    url: url('customer/overview'),
                },
                {
                    label: 'ssp_asset.list.title' | trans,
                    url: url('customer/asset')
                },
                {
                    label: data.sspAsset.name,
                },
            ],
        },
    } only %}
{% endblock %}

{% block customerContent %}
    <div class="box">
        {% block assetTitle %}
            {% include molecule('asset-details-title', 'SspAssetManagement') with {
                class: 'spacing-bottom--big',
                data: {
                    title: data.sspAsset.name,
                    reference: data.sspAsset.reference,
                    unassignBusinessUnitForm: data.unassignBusinessUnitForm,
                    canBusinessUnitBeUnassigned: data.canBusinessUnitBeUnassigned,
                },
            } only %}
        {% endblock %}

        {% block information %}
            {% include molecule('asset-information', 'SspAssetManagement') with {
                data: {
                    image: data.sspAsset.image is not empty ? url('customer/asset/view-image', { 'ssp-asset-reference': data.sspAsset.reference }) : 'data:image/webp;base64,',
                    name: data.sspAsset.name,
                    reference: data.sspAsset.reference,
                    information: [
                        { title: 'ssp_asset.details_page.reference', value: data.sspAsset.reference },
                        { title: 'ssp_asset.details_page.status', value: block('status') },
                        { title: 'ssp_asset.details_page.owner', value: data.sspAsset.companyBusinessUnit.name | default('ssp_asset.details_page.undefined' | trans) },
                        { title: 'ssp_asset.details_page.name', value: data.sspAsset.name },
                        { title: 'ssp_asset.details_page.serial_number', value: data.sspAsset.serialNumber | default('---') },
                    ],
                    note: data.sspAsset.note,
                    assignments: data.sspAsset.assignments,
                },
            } only %}
        {% endblock %}

        {% block separator %}
            <hr class="box__separator">
        {% endblock %}

        {# FILE DASHBOARDS WIDGET #}
        {% if data.sspAsset.sspInquiryCollection and (can('ViewBusinessUnitSspInquiryPermissionPlugin') or can('ViewCompanySspInquiryPermissionPlugin')) %}
            {% widget 'SspInquiryListWidget' args [data.sspAsset.sspInquiryCollection, url('customer/ssp-inquiry', {ssp_asset_reference: data.sspAsset.reference})] only %}{% endwidget %}
        {% endif %}
        {# SERVICE DASHBOARDS WIDGET #}
    </div>
{% endblock %}

{% block status %}
    {% include molecule('status') with {
        data: {
            label: ('ssp_asset.status.' ~ data.sspAsset.status) | trans,
            status: data.sspAsset.status,
        },
    } only %}
{% endblock %}
