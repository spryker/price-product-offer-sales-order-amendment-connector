{% extends model('component') %}

{% define config = {
    name: 'dashboard-table',
} %}

{% define data = {
    title: required,
    counter: 0,
    columns: required,
    rows: required,
    emptyText: required,
    moreLink: required,
} %}

{%- block extraClass %} box box--stretch grid grid--column {{ parent() }}{% endblock -%}

{% block body %}
    {% block title %}
        {% include molecule('title-counter', 'SspDashboardManagement') with {
            class: 'col--sm-12',
            data: {
                title: data.title,
                counter: data.counter,
            },
        } only %}
    {% endblock %}

    {% block table %}
        {% include molecule('advanced-table', 'SspInquiryManagement') with {
            class: 'col--expand col--sm-12',
            data: {
                columns: data.columns,
                rows: data.rows,
                emptyText: data.emptyText,
            },
        } only %}
    {% endblock %}

    {% block more %}
        {% if data.rows | length %}
            <div class="spacing-top col--sm-12 text-right">
                <a class="link link--alt" href="{{ data.moreLink }}">{{ 'dashboard.general.view_all' | trans }}</a>
            </div>
        {% endif %}
    {% endblock %}
{% endblock %}
