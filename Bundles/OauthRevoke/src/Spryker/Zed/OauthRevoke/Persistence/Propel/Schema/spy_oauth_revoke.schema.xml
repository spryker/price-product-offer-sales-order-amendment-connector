<?xml version="1.0"?>
<database xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="zed" xsi:noNamespaceSchemaLocation="http://static.spryker.com/schema-01.xsd" namespace="Orm\Zed\OauthRevoke\Persistence" package="src.Orm.Zed.OauthRevoke.Persistence">

    <table name="spy_oauth_refresh_token" phpName="SpyOauthRefreshToken" identifierQuoting="true">
        <column name="id_oauth_refresh_token" required="true" type="BIGINT" autoIncrement="true" primaryKey="true"/>

        <column name="identifier" type="VARCHAR" size="128" required="true" description="A unique identifier for an entity."/>
        <column name="scopes" type="VARCHAR" size="1024" required="false" description="A collection of permission scopes that define the access rights of a token or user."/>
        <column name="customer_reference" type="VARCHAR" size="255" required="false" description="A unique reference for a customer."/>
        <column name="user_identifier" type="VARCHAR" size="1024" required="true" description="A generic identifier for a user, which can be a reference, ID, or username."/>
        <column name="fk_oauth_client" type="VARCHAR" size="1024" required="true"/>

        <column name="expires_at" type="TIMESTAMP" required="true" description="The timestamp when an OAuth refresh token expires."/>
        <column name="revoked_at" type="TIMESTAMP" required="false" description="The timestamp when an OAuth refresh token was revoked."/>

        <foreign-key name="spy_oauth_refresh_token-identifier" foreignTable="spy_oauth_client">
            <reference local="fk_oauth_client" foreign="identifier"/>
        </foreign-key>

        <index name="index-spy_oauth_refresh_token-identifier">
            <index-column name="identifier"/>
        </index>
        <index name="index-spy_oauth_refresh_token-customer_reference">
            <index-column name="customer_reference"/>
        </index>
        <index name="index-spy_oauth_refresh_token-fk_oauth_client">
            <index-column name="fk_oauth_client"/>
        </index>
        <index name="index-spy_oauth_refresh_token-user_identifier">
            <index-column name="user_identifier"/>
        </index>

        <behavior name="timestampable"/>

        <id-method-parameter value="spy_oauth_refresh_token_pk_seq"/>
    </table>

</database>
