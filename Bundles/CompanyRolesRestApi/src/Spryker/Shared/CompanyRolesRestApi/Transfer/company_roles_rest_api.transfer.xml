<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="RestCompanyRoleAttributes">
        <property name="name" type="string" description="The name of an entity (e.g., user, category, product, role)."/>
        <property name="isDefault" type="bool" description="A flag indicating if an entity is the default one."/>
    </transfer>

    <transfer name="CompanyRole">
        <property name="uuid" type="string" description="A Universally Unique Identifier for an entity."/>
        <property name="fkCompany" type="int"/>
    </transfer>

    <transfer name="CompanyRoleCollection">
        <property name="roles" type="CompanyRole[]" singular="role" description="A collection of roles."/>
    </transfer>

    <transfer name="CompanyUser">
        <property name="companyRoleCollection" type="CompanyRoleCollection" description="A collection of company roles."/>
    </transfer>

    <transfer name="CompanyRoleResponse">
        <property name="companyRoleCollection" type="CompanyRoleCollection" description="A collection of company roles."/>
        <property name="isSuccessful" type="bool" description="A boolean flag indicating if an operation completed successfully."/>
        <property name="companyRoleTransfer" type="CompanyRole" description="A data transfer object for a company role."/>
    </transfer>

    <transfer name="RestUser">
        <property name="idCompany" type="int"/>
        <property name="idCompanyUser" type="int"/>
    </transfer>

    <transfer name="RestErrorMessage">
        <property name="status" type="int" description="A HTTP status code."/>
        <property name="code" type="string" description="A Spryker specific error code."/>
        <property name="detail" type="string" description="A detailed error message providing more specific information about an issue."/>
    </transfer>

    <transfer name="CompanyRoleCriteriaFilter">
        <property name="idCompanyUser" type="int"/>
    </transfer>

</transfers>
